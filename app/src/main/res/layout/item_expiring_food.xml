<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/zeromeal_white"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#D3D3D3"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/zeromeal_text_dark"/>

            <TextView
                android:id="@+id/text_expiry_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kedaluwarsa dalam 3 hari"
                android:textSize="12sp"
                android:textColor="@color/zeromeal_text_light"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warning"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/zeromeal_orange"
            android:background="#33FF9800"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
