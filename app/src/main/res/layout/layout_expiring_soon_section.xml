<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Segera Kedaluwarsa"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/zeromeal_text_dark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat Semua"
            android:textSize="14sp"
            android:textColor="@color/zeromeal_green"
            android:textStyle="bold"/>
    </LinearLayout>
    
    <!-- Placeholder for list items. In code this would be a RecyclerView -->
    <include layout="@layout/item_expiring_food"/>
    <include layout="@layout/item_expiring_food"/>

</LinearLayout>
