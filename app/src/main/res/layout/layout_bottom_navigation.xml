<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Bottom Bar Background -->
    <LinearLayout
        android:id="@+id/bottom_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/zeromeal_white"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="@color/zeromeal_green"
                xmlns:app="http://schemas.android.com/apk/res-auto"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beranda"
                android:textSize="10sp"
                android:textColor="@color/zeromeal_green"/>
        </LinearLayout>

        <!-- Stock -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_stock"
                app:tint="@color/zeromeal_text_light"
                xmlns:app="http://schemas.android.com/apk/res-auto"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stok"
                android:textSize="10sp"
                android:textColor="@color/zeromeal_text_light"/>
        </LinearLayout>

        <!-- Spacer for FAB -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <!-- Recipe -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_recipe"
                app:tint="@color/zeromeal_text_light"
                xmlns:app="http://schemas.android.com/apk/res-auto"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resep"
                android:textSize="10sp"
                android:textColor="@color/zeromeal_text_light"/>
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                app:tint="@color/zeromeal_text_light"
                xmlns:app="http://schemas.android.com/apk/res-auto"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil"
                android:textSize="10sp"
                android:textColor="@color/zeromeal_text_light"/>
        </LinearLayout>

    </LinearLayout>

    <!-- FAB -->
    <androidx.cardview.widget.CardView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="28dp"
        app:cardCornerRadius="28dp"
        app:cardBackgroundColor="@color/zeromeal_green"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_add"
            app:tint="@android:color/white"
            android:layout_gravity="center"
            xmlns:app="http://schemas.android.com/apk/res-auto"/>
            
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
