<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Daftar Belanja"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/zeromeal_text_dark"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelola"
            android:textSize="14sp"
            android:textColor="@color/zeromeal_green"
            android:textStyle="bold"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/zeromeal_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 item dalam daftar"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/zeromeal_text_light"
                android:layout_marginBottom="12dp"/>

            <include layout="@layout/item_shopping_list"/>
            <include layout="@layout/item_shopping_list"/>
            <include layout="@layout/item_shopping_list"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
